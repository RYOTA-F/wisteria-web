{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["components/*"],
      "@const/*": ["const/*"],
      "@layouts/*": ["layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@sections/*": ["src/sections/*"],
      "@types/*": ["types/*"]
    }
  }
}
